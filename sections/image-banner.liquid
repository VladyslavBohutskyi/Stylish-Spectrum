      "type": "banner_item",
      "name": "Banner item",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop image",
          "info": "Size recommended 1920x850"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image",
          "info": "Size recommended 400x600"
        },
        {
          "type": "url",
          "id": "banner_link",
          "label": "Banner Link",
          "info": "Optional"
        },
        {
          "type": "range",
          "id": "img_brightness",
          "min": 0,
          "max": 9,
          "step": 1,
          "label": "Image brightness",
          "default": 0
