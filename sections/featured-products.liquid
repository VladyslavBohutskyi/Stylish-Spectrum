{{ 'section-featured-products.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} {
      background: {{ section.settings.bg_color }};
      margin-top: {{ section.settings.margin_top_desktop }}px;
      margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }

  #shopify-section-{{ section.id }} .s-featured-products {
      max-width: {{ section.settings.container_width }}px;
  }

  @media (max-width: 600px) {
      #shopify-section-{{ section.id }} {
          margin-top: {{ section.settings.margin_top_mobile }}px;
          margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
          padding-top: {{ section.settings.padding_top_mobile }}px;
          padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }

      #shopify-section-{{ section.id }}  {
          min-height: {{ section.settings.mobile_height }}px;
          align-items: {{ section.settings.vertical_alignment_mobile }};
          justify-content: {{ section.settings.horizontal_alignment_mobile }};
          text-align: {{ section.settings.text_align_mobile }};
      }
  }
</style>

<section class="s-featured-products s-featured-products--{{ section.settings.content_position }}">
  <div class="s-featured-products__content">
    {% if section.settings.title %}
      <div class="s-featured-products__content_title">
        <h2>{{ section.settings.title }}</h2>
      </div>
    {% endif %}
    {% if section.settings.subtitle %}
      <div class="s-featured-products__content_subtitle">
        <p>{{ section.settings.subtitle }}</p>
      </div>
    {% endif %}
    {% if section.settings.btn_name %}
      <a
        href="{{ section.settings.btn_link }}"
        class="s-featured-products__content_btn s-featured-products__content_btn--{{ section.settings.btn_style }}"
      >
        {{ section.settings.btn_name }}
      </a>
    {% endif %}
  </div>
  <div class="s-featured-products__row">
    {% for block in section.blocks %}
      {%- assign product = block.settings -%}
      <div class="s-featured-products__row_product">
        {% if product.product_link %}
          <a href="{{ product.product_link }}">
        {% endif %}
        <img src="{{ product.product_image | img_url: 'master' }}" class="s-featured-products__row_product_img">
        <img
          src="{{ product.product_image_hover | img_url: 'master' }}"
          class="s-featured-products__row_product_img s-featured-products__row_product_img--hover"
        >
        {% if product.product_link %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

